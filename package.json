{
	"name": "power-settings",
	"displayName": "Power Settings",
	"description": "Toggle Settings like a Pro",
	"publisher": "z0al",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"settings",
		"power",
		"toggle",
		"json"
	],
	"activationEvents": [
		"onLanguage:jsonc",
		"onCommand:power-settings.toggle",
		"onCommand:power-settings.toggle-workspace"
	],
	"main": "./dist/main.js",
	"contributes": {
		"commands": [
			{
				"title": "Toggle",
				"category": "Power Settings",
				"command": "power-settings.toggle"
			},
			{
				"title": "Toggle (Workspace)",
				"category": "Power Settings",
				"command": "power-settings.toggle-workspace"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"precompile": "rimraf -rf ./dist",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"test": "yarn test:unit && yarn test:e2e",
		"test:unit": "yarn run compile && mocha dist/**/*.test.js --ignore '**/e2e/*.test.js'",
		"test:e2e": "yarn run compile && node ./dist/test/runTest.js",
		"format": "prettier -w '**/*.{ts,json,md}'",
		"vscode:prepublish": "yarn run compile"
	},
	"dependencies": {
		"capital-case": "^1.0.4",
		"micromatch": "^4.0.4",
		"p-wait-for": "^3.2.0"
	},
	"devDependencies": {
		"@types/chai": "^4.2.21",
		"@types/glob": "^7.1.4",
		"@types/micromatch": "^4.0.2",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.6.1",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.29.1",
		"@typescript-eslint/parser": "^4.29.1",
		"@vscode/test-electron": "^1.6.2",
		"chai": "^4.3.4",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.0.3",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.5"
	},
	"prettier": {
		"useTabs": true,
		"printWidth": 72,
		"singleQuote": true,
		"arrowParens": "always",
		"quoteProps": "consistent"
	}
}
