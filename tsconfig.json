{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": ["es6"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", ".vscode-test"]
}
